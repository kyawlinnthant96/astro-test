---
const {id} = Astro.params;
const response = await fetch(`https://jsonplaceholder.typicode.com/posts/${id}`)
const currPost = await response.json();
import PostCard from "../../components/PostCard.tsx"
---

<section class="w-full min-h-screen bg-slate-900 flex items-center p-20">
    <PostCard id={currPost.id} title={currPost.title} body={currPost.body} />
</section>